<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:id="@id/activity_login"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:background="@drawable/splash_new_bg"
    n1:orientation="horizontal"
    n1:weightSum="1.0">

    <LinearLayout
        n1:layout_width="0.0dip"
        n1:layout_height="fill_parent"
        n1:layout_weight="0.4"
        n1:orientation="vertical"
        n1:weightSum="1.0">

        <ImageView
            n1:id="@id/iv_logo"
            n1:layout_width="fill_parent"
            n1:layout_height="0.0dip"
            n1:layout_marginTop="70.0sp"
            n1:layout_weight="0.6"
            n1:scaleType="fitCenter"
            n1:src="@drawable/logo" />
        <Button
            n1:id="@+id/network_button"
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_gravity="center"
            n1:text="Network Status" />

        <TextView
            n1:id="@id/username_password"
            n1:layout_width="fill_parent"
            n1:layout_height="0.0dip"
            n1:layout_marginTop="5.0sp"
            n1:layout_weight="0.4"
            n1:gravity="bottom|center"
            n1:lines="2"
            n1:paddingBottom="10.0sp"
            n1:paddingLeft="10.0sp"
            n1:text="@string/details"
            n1:textAlignment="textStart"
            n1:textColor="@color/darker_grey"
            n1:textSize="11.0sp"
            n1:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        n1:layout_width="0.0dip"
        n1:layout_height="fill_parent"
        n1:layout_weight="0.6"
        n1:orientation="vertical"
        n1:weightSum="6.0">

        <TextView
            n1:id="@id/tv_enter_credentials"
            n1:layout_width="fill_parent"
            n1:layout_height="0.0dip"
            n1:layout_marginTop="10.0dip"
            n1:layout_toRightOf="@id/iv_logo"
            n1:layout_weight="1.0"
            n1:fontFamily="sans-serif"
            n1:gravity="center"
            n1:text="@string/credential_detail"
            n1:textColor="@color/white"
            n1:textSize="22.0sp"
            n1:textStyle="bold" />

        <EditText
            n1:id="@id/et_email"
            n1:layout_width="fill_parent"
            n1:layout_height="0.0dip"
            n1:layout_below="@id/tv_enter_credentials"
            n1:layout_marginLeft="50.0dip"
            n1:layout_marginRight="50.0dip"
            n1:layout_marginTop="20.0dip"
            n1:layout_toRightOf="@id/iv_logo"
            n1:layout_weight="1.0"
            n1:background="@drawable/background_editext"
            n1:focusable="true"
            n1:fontFamily="sans-serif"
            n1:hint="@string/username"
            n1:imeOptions="flagNoExtractUi"
            n1:inputType="textEmailAddress"
            n1:lines="1"
            n1:maxLines="1"
            n1:nextFocusDown="@id/et_password"
            n1:nextFocusUp="@id/et_activation_code"
            n1:paddingLeft="20.0dip"
            n1:paddingRight="20.0dip"
            n1:singleLine="true"
            n1:textColor="@color/black"
            n1:textColorHint="@color/white"
            n1:textCursorDrawable="@null"
            n1:textSize="18.0sp" />

        <EditText
            n1:id="@id/et_password"
            n1:layout_width="fill_parent"
            n1:layout_height="0.0dip"
            n1:layout_below="@id/et_email"
            n1:layout_centerHorizontal="true"
            n1:layout_marginLeft="50.0dip"
            n1:layout_marginRight="50.0dip"
            n1:layout_marginTop="10.0dip"
            n1:layout_toRightOf="@id/iv_logo"
            n1:layout_weight="1.0"
            n1:background="@drawable/background_editext"
            n1:focusable="true"
            n1:fontFamily="sans-serif"
            n1:hint="@string/password"
            n1:imeOptions="flagNoExtractUi"
            n1:inputType="textPassword"
            n1:lines="1"
            n1:maxLines="1"
            n1:nextFocusDown="@id/et_sever_url"
            n1:nextFocusUp="@id/et_email"
            n1:paddingLeft="20.0dip"
            n1:paddingRight="20.0dip"
            n1:singleLine="true"
            n1:textColor="@color/black"
            n1:textColorHint="@color/white"
            n1:textCursorDrawable="@null"
            n1:textSize="18.0sp" />

        <Button
            n1:id="@id/bt_submit"
            n1:layout_width="fill_parent"
            n1:layout_height="0.0dip"
            n1:layout_marginLeft="50.0dip"
            n1:layout_marginRight="50.0dip"
            n1:layout_marginTop="10.0dip"
            n1:layout_weight="1.0"
            n1:background="@drawable/selector_button"
            n1:focusable="true"
            n1:fontFamily="sans-serif"
            n1:gravity="center"
            n1:hint="@string/username"
            n1:lines="1"
            n1:maxLines="1"
            n1:paddingLeft="20.0dip"
            n1:paddingRight="20.0dip"
            n1:text="@string/submit"
            n1:textColor="@color/black"
            n1:textColorHint="@color/white"
            n1:textCursorDrawable="@null"
            n1:textSize="18.0sp" />

        <CheckBox
            n1:id="@id/cb_remember_me"
            n1:layout_width="fill_parent"
            n1:layout_height="0.0dip"
            n1:layout_marginLeft="55.0dip"
            n1:layout_marginRight="25.0dip"
            n1:layout_weight="1.0"
            n1:buttonTint="@color/white"
            n1:checked="true"
            n1:focusable="true"
            n1:fontFamily="sans-serif"
            n1:paddingRight="20.0dip"
            n1:text="@string/remember_me"
            n1:textColor="@color/white"
            n1:textColorHint="@color/white"
            n1:textCursorDrawable="@null"
            n1:textSize="18.0sp" />

        <!-- <Button
             n1:id="@+id/btn_lwebsite"
             n1:layout_width="match_parent"
             n1:layout_height="2dp"
             n1:layout_weight="1"
             n1:background="@drawable/selector_button"
             n1:focusable="true"
             n1:focusableInTouchMode="true"
             n1:textSize="12dp" />-->

         <TextView
             n1:id="@+id/tv_versao"
             n1:layout_width="match_parent"
             n1:layout_height="wrap_content"
             n1:fontFamily="sans-serif-thin"
             n1:text=""
             n1:textAlignment="center"
             n1:textColor="#ffffff"
             n1:textSize="20dp"
             n1:textStyle="bold" />

         <TextView
             n1:id="@+id/tv_tipologia"
             n1:layout_width="match_parent"
             n1:layout_height="wrap_content"
             n1:fontFamily="sans-serif-thin"
             n1:text=""
             n1:textAlignment="center"
             n1:textColor="#ffffff"
             n1:textSize="20dp"
             n1:textStyle="bold" />
     </LinearLayout>
 </LinearLayout>