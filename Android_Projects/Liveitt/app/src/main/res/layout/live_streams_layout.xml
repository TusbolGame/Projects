<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:id="@id/rl_streams_layout"
    n1:layout_width="wrap_content"
    n1:layout_height="170.0dip"
    n1:background="@drawable/selector_vod_layout"
    n1:focusable="true"
    n1:orientation="horizontal"
    n1:paddingBottom="1.0dip"
    n1:paddingLeft="1.0dip"
    n1:paddingRight="1.0dip"
    n1:paddingTop="1.0dip">

    <android.support.v7.widget.CardView xmlns:n2="http://schemas.android.com/apk/res-auto"
        n1:id="@id/card_view"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:clickable="true"
        n1:focusable="true"
        n2:cardElevation="2.0dip"
        n2:cardUseCompatPadding="true">

        <ImageView
            n1:id="@id/iv_channel_logo"
            n1:layout_width="70.0dip"
            n1:layout_height="60.0dip"
            n1:layout_gravity="center_horizontal"
            n1:layout_marginTop="8.0dip"
            n1:layout_weight="1.0"
            n1:src="@drawable/logo"
            n1:tag="image_tag" />

        <RelativeLayout
            n1:id="@id/rl_movie_image"
            n1:layout_width="fill_parent"
            n1:layout_height="fill_parent">

            <ImageView
                n1:id="@id/iv_favourite"
                n1:layout_width="30.0dip"
                n1:layout_height="30.0dip"
                n1:layout_alignParentRight="true"
                n1:layout_marginRight="10.0dip"
                n1:layout_marginTop="2.0dip"
                n1:background="@drawable/selector_favourite_vod"
                n1:src="@drawable/favourite_yellow" />
        </RelativeLayout>

        <RelativeLayout
            n1:id="@id/rl_channel_bottom"
            n1:layout_width="wrap_content"
            n1:layout_height="80.0dip"
            n1:layout_below="@id/rl_movie_image"
            n1:layout_gravity="bottom">

            <RelativeLayout
                n1:id="@id/relative_layout_loading"
                n1:layout_width="fill_parent"
                n1:layout_height="80.0dip"
                n1:layout_alignParentBottom="true"
                n1:layout_centerVertical="true"
                n1:background="#ffffffff"
                n1:gravity="center_vertical">

                <TextView
                    n1:id="@id/tv_movie_name"
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:layout_gravity="center_vertical"
                    n1:layout_marginLeft="0.0dip"
                    n1:layout_marginRight="0.0dip"
                    n1:ellipsize="marquee"
                    n1:gravity="center"
                    n1:text="@string/loading"
                    n1:textColor="@color/black"
                    n1:textSize="12.0dip" />

                <TextView
                    n1:id="@id/tv_current_live"
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:layout_below="@id/tv_movie_name"
                    n1:layout_gravity="center_vertical"
                    n1:layout_marginLeft="0.0dip"
                    n1:layout_marginRight="0.0dip"
                    n1:layout_marginTop="15.0dip"
                    n1:ellipsize="marquee"
                    n1:paddingStart="5.0dip"
                    n1:textColor="@color/colorPrimary"
                    n1:textSize="10.0dip"
                    n1:visibility="gone" />

                <TextView
                    n1:id="@id/tv_time"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_above="@id/progressBar"
                    n1:layout_alignRight="@id/progressBar"
                    n1:layout_marginTop="10.0dip"
                    n1:textColor="@color/colorPrimary"
                    n1:textSize="10.0dip"
                    n1:visibility="gone" />

                <ProgressBar
                    n1:id="@id/progressBar"
                    style="?android:progressBarStyleHorizontal"
                    n1:layout_width="fill_parent"
                    n1:layout_height="3.0dip"
                    n1:layout_below="@id/tv_current_live"
                    n1:layout_centerHorizontal="true"
                    n1:layout_marginStart="10.0dip"
                    n1:layout_marginTop="3.0dip"
                    n1:progressDrawable="@drawable/epgprogress"
                    n1:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                n1:id="@id/ll_menu"
                n1:layout_width="wrap_content"
                n1:layout_height="60.0dip"
                n1:layout_alignParentRight="true"
                n1:layout_centerVertical="true"
                n1:visibility="gone">

                <TextView
                    n1:id="@id/tv_streamOptions"
                    n1:layout_width="wrap_content"
                    n1:layout_height="fill_parent"
                    n1:layout_gravity="center_vertical"
                    n1:layout_marginRight="5.0dip"
                    n1:background="@drawable/selector_menu"
                    n1:gravity="center_vertical"
                    n1:text="â‹®"
                    n1:textAppearance="?android:textAppearanceLarge"
                    n1:textSize="25.0dip" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>