<?xml version="1.0" encoding="utf-8"?>
<transitionSet>
    <transition n1:interpolator="@android:interpolator/fast_out_linear_in" n1:duration="350" n1:slideEdge="bottom" class="android.support.v17.leanback.transition.SlideNoPropagation"
      xmlns:n1="http://schemas.android.com/apk/res/android">
        <targets>
            <target n1:excludeId="@id/title_badge" />
            <target n1:excludeId="@id/title_text" />
            <target n1:excludeId="@id/title_orb" />
            <target n1:excludeId="@id/details_background_view" />
            <target n1:excludeId="@id/video_surface" />
        </targets>
    </transition>
    <transition n2:duration="350" class="android.support.v17.leanback.transition.ParallaxTransition"
      xmlns:n2="http://schemas.android.com/apk/res/android">
        <targets>
            <target n2:targetId="@id/details_frame" />
        </targets>
    </transition>
    <fade n3:duration="350"
      xmlns:n3="http://schemas.android.com/apk/res/android">
        <targets>
            <target n3:excludeId="@id/video_surface" />
        </targets>
    </fade>
</transitionSet>