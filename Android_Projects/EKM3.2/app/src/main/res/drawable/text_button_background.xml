<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2A7A4F" />
            <gradient android:angle="-90" android:startColor="#2A7A4F" android:endColor="#2A7A4F"  />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#59F19E" />
            <gradient android:angle="-90" android:startColor="#59F19E" android:endColor="#59F19E"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/transparent" />
            <gradient android:angle="-90" android:startColor="@color/transparent" android:endColor="@color/transparent" />
        </shape>
    </item>
</selector>