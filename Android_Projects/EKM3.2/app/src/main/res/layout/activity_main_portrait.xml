<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CategoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp">

        <ImageView
            android:id="@+id/imgLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:focusable="false"
            android:scaleType="fitStart"
            android:src="@drawable/filmstrip_portrait" />

        <!--Top View-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <!--Logo-->
                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="start"
                    android:layout_weight="2"
                    android:scaleType="fitStart"
                    android:focusable="false"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/dropdownview"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/dropdown_background"
                    android:layout_gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="0dp"
                    android:layout_marginEnd="10dp"
                    android:text="Select any option..."
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:drawableEnd="@drawable/dropdown_icon"
                    android:clickable="true"
                    android:focusable="true" />

                <com.evilkingmedia.utility.FontAwesome
                    android:id="@+id/txtlogout"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center_vertical"
                    android:text="@string/fa_icon_off"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:focusable="true"/>

            </LinearLayout>
            <!--End of Top View-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="version"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:focusable="false"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:id="@+id/dt_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="14:36 July 24, 2018"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:gravity="end"
                    android:focusable="false"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="5"
                android:layout_marginBottom="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/rlMovies"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1.4"
                        android:background="@drawable/section_selection_background"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgMovies"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:src="@drawable/cineteca" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="ON DEMAND"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:nextFocusForward="@+id/txtMusic"
                            android:nextFocusRight="@+id/txt_live"
                            android:nextFocusDown="@+id/txtMusic"
                            android:layout_marginLeft="@dimen/_5sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rllive"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1.4"
                        android:background="@drawable/section_selection_background"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgLive"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:src="@drawable/live" />

                        <TextView
                            android:id="@+id/txt_live"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LIVE TV"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp" />
                    </LinearLayout>

                </LinearLayout>
                <!--Live tv-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/rlCartoon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/section_selection_background"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgSeries"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:src="@drawable/cartoon" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CARTOONS"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rlMusic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1.4"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/section_selection_background">

                        <ImageView
                            android:id="@+id/imgMusic"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:src="@drawable/musica"/>

                        <TextView
                            android:id="@+id/txtMusic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MUSICA"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/rlSports"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/section_selection_background"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgSports"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:src="@drawable/sports"/>

                        <TextView
                            android:id="@+id/txtSports"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="SPORTS"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/_5sdp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1.1">

                    <LinearLayout
                        android:id="@+id/rlVideoTeca"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/section_selection_background"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/documentari_webcaster" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIDEOTECA"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginLeft="@dimen/_5sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rlepg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/section_selection_background"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgEPG"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/epg"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EPG \u0026 GUIDE"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1.1">

                    <LinearLayout
                        android:id="@+id/rlMeteo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1.4"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/section_selection_background"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgWeather"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/weather"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="METEO"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rllibri"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/section_selection_background"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/libri"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LIBRI"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1.1">

                    <LinearLayout
                        android:id="@+id/rlMyWebCaster"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/section_selection_background"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/sport_web_caster"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MY WEB CASTER"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_26sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:orientation="horizontal"
            android:focusable="false"
            android:padding="@dimen/_4sdp"
            android:gravity="center">
            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="9.5sp"
                android:textAlignment="center"
                android:autoLink="web"
                android:textColorLink="@color/colorPrimary"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/filmstrip_portrait"
            android:focusable="false"
            android:layout_gravity="end"
            android:scaleType="fitEnd"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ads_unit_id"/>


</FrameLayout>