<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".epg.EPGDetailActivity"
    android:background="@drawable/background">


    <LinearLayout
        android:id="@+id/categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:id="@+id/btnhome"
            android:background="@drawable/highlight_button"
            android:layout_margin="5dp"/>
        <requestFocus/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Film Al Cinema"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:id="@+id/btnfilmal"
            android:background="@drawable/highlight_button"
            android:layout_margin="5dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Film Sub ITA"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:id="@+id/btnfilmsub"
            android:background="@drawable/highlight_button"
            android:layout_margin="5dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Film A/Z"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:id="@+id/btnfilmaz"
            android:background="@drawable/highlight_button"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/categories"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_search">

            <EditText
                android:id="@+id/etMoviname"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:background="@color/colorWhite"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_search"
                android:hint="Search your favourite movies"
                android:focusable="true"
                android:drawableStart="@drawable/ic_search" />

            <Button
                android:id="@+id/btnMoviname"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Search"
                android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.1">
    </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ivUp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/ic_up"
                    android:layout_weight="0.2"
                    android:layout_marginEnd="50dp" />

                <ImageView
                    android:id="@+id/ivDown"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/ic_down"
                    android:layout_weight="0.2"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="50dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlnext">

        <ImageView
            android:id="@+id/ivNext"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="50dp"
            android:src="@drawable/ic_next"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="50dp" />

        <ImageView
            android:id="@+id/ivPrev"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            android:src="@drawable/ic_prev"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="50dp" />
    </RelativeLayout>





</RelativeLayout>



